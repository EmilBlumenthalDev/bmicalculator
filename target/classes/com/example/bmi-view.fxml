<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
    xmlns="http://javafx.com/javafx"
    fx:controller="com.example.BmiController"
    prefHeight="300.0" prefWidth="350.0"
    style="-fx-background-color: #f4f4f4;">

    <top>
        <HBox alignment="CENTER" style="-fx-background-color: #e0e0e0; -fx-padding: 10 0 10 0;">
            <Label fx:id="timeLabel" text="Time:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        </HBox>
    </top>
    <center>
        <VBox spacing="12.0" alignment="CENTER" style="-fx-padding: 20; -fx-background-radius: 8; -fx-background-color: #ffffff;">
            <ComboBox
                fx:id="languageSelector"
                prefWidth="140.0"
                promptText="Choose Language"
            />

            <Label fx:id="weightLabel" text="Weight" />
            <TextField fx:id="weightInput" maxWidth="200.0" />

            <Label fx:id="heightLabel" text="Height" />
            <TextField fx:id="heightInput" minWidth="120.0" maxWidth="200.0"/>
            <Button fx:id="calculateButton" text="Calculate" onAction="#calculateBmi"/>

            <Label fx:id="resultLabel" text="Your BMI is: " />
        </VBox>
    </center>
</BorderPane>